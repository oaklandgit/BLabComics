{% extends "snippets/base.jinja" %}

{% block title %}
{{ groupLabels[seriesId] }} Comics
{% endblock %}

{% block content %}

<h1>More {{ groupLabels[seriesId] }}</h1>

<div class="gallery">
{% for item in items %}
    <a href="/comics/{{ item.slug }}">
    <img class="teaser" src="{{ url_for('static', filename='thumbs/' ~ item.images[0]) }}">
</a>
{% endfor %}
</div>

{% endblock %}