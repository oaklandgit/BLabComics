{% extends "snippets/base.jinja" %}

{% block title %}
Archives
{% endblock %}

{% block content %}

{% for series, items in items | groupby('series') %}
    <h1>{{ groupLabels[series] }}</h1>
    <div class="gallery">
    {% for item in items %}
        <a href="/comics/{{ item.slug }}">
        <img class="teaser" src="{{ url_for('static', filename='thumbs/' ~ item.images[0]) }}">
    </a>
    {% endfor %}
    </div>
{% endfor %}


{% endblock %}