{% extends "snippets/base.jinja" %}

{% block title %}
    {{ groupLabels[item.series] }} Comics: "{{ item.title }}"
{% endblock %}

{% block content %}

<h1>
    <a href="/comics/series/{{ item.series }}">
    {{ groupLabels[item.series] }}:
    </a> "{{ item.title }}"
</h1>

<div class="imageGroup">
{% for image in item.images %}
    <img src="{{ url_for('static', filename='full2x/' ~ image) }}" alt="{{ item.description }}">
{% endfor %}
</div>

{% if item.markdown %}
<p>{{ item.markdown | md | safe }}</p>
{% endif %}

<div id="paging">
<a href="/comics/{{ prev.slug }}">&larr;</a>  
<a href="/comics/{{ next.slug }}">NEXT: {{ next.description }} &rarr;</a>
</div>

{% endblock %}