{% extends "snippets/base.jinja" %}

{% block title %}
Home
{% endblock %}

{% block content %}

{% set item = items | first %}

<section>
{% include 'snippets/article.jinja' %}
</section>

<section>

<h1>More Hilarity</h1>
<div class="gallery">
{% for item in featured %}
    <a href="/comics/{{ item.slug }}">
        <img class="teaser" src="{{ url_for('static', filename='images/' ~ item.images[0]) }}">
    </a>
{% endfor %}
</div>

<div id="paging">
    <a href="/comics">Browse the Archives &rarr;</a>
</div>

</section>


{% endblock %}